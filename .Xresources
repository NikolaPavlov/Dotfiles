URxvt*font: xft:Terminus (TTF):pixelsize=14:minspace=False, xft:Inconsolata Nerd Font Mono:pixelsize=14
URxvt*boldFont: xft:Terminus (TTF):pixelsize=16:minspace=False, xft:Inconsolata Nerd Font Mono:pixelsize=16
URxvt*letterSpace: 0


! hotfix for the missing icons
! URxvt*font:                 xft:Inconsolata Nerd Font Mono:pixelsize=27:minspace=False, xft:DejaVu Sans:pixelsize=18
! URxvt*boldFont:             xft:Inconsolata Nerd Font Mono:pixelsize=27:minspace=False, xft:DejaVu Sans:pixelsize=18
! URxvt*letterSpace: 0






URxvt.scrollBar: false



! Start badwolf

URxvt*background: #000000
URxvt*foreground: #f8f6f2
! black
URxvt*color0:  #141413
URxvt*color8:  #000000
! red
URxvt*color1:  #ff2c4b
URxvt*color9:  #B21818
! green
URxvt*color2:  #aeee00
URxvt*color10: #18B218
! yellow
URxvt*color3:  #fade3e
URxvt*color11: #ffa724
! blue
URxvt*color4:  #0a9dff
URxvt*color12: #1818B2
! purple
URxvt*color5:  #ff9eb8
URxvt*color13: #ff9eb8
! cyan
URxvt*color6:  #8cffba
URxvt*color14: #8cffba
! white
URxvt*color7:  #d9cec3
URxvt*color15: #d9cec3

URxvt*cursorColor: #aeee00
URxvt*fadeColor: #ffffff

! Fade when window loose focus
URxvt*fading: 5

! Do not scroll to bottom when urxvt recieves output
URxvt*scrollTtyOutput:  false
URxvt*scrollWithBuffer:  false

! VisualBell
URxvt*visualBell:  true

! Use the specified colour to disp1ay underlined characters when the foreground colour is the default. Makes it easier to notice, rxvt-unicode authors choice as well.
URxvt*colorUL:  yellow
